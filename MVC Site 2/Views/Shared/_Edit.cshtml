@model MVC_Site_2.Models.Person


@*<h3 class="bg-warning">Name</h3>
<span>City</span><br />
<span>Phone number</span>*@

@using (Ajax.BeginForm("Edit", "Person", new AjaxOptions
{
    HttpMethod = "post",

    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "peopleList"
}, new
{
    @class = "form-inline"

}))
{
            <div class="form-group form">
                <label for="n">Name:</label>
                <input type="text" name="nameIn" value="@Model.Name" id="n" class="form-control" />
            </div>
            <div class="form-group">
                <label for="pN">Phone Number</label>
                <input type="text" name="phoneNumberIn" value="@Model.PhoneNumber" id="pN" class="form-control" />
            </div>
            <div class="form-group">
                <label for="c">City</label>
                <input type="text" name="cityIn" value="@Model.City" id="c" class="form-control" />
            </div>
            <input type="hidden" value="@Model.Id" name="idIn" />
            <input type="submit" value="Edit player" class="btn btn-default" />
         }